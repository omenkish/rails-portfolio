<div class="col-md-4" >
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_item.thumb_image, class: 'card-img-top' unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
        <h4><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h4>
        <h6><%= portfolio_item.subtitle.truncate(30) %></h6>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <% if logged_in?(:site_admin) %>
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", portfolio_show_path(portfolio_item) %></button>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_portfolio_path(portfolio_item) %></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



