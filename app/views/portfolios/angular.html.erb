<h1>Angular Portfolio Items</h1>

<%= link_to 'Create New Item', new_portfolio_path if logged_in?(:site_admin) %>

<% @angular_portfolio_items.each do |portfolio_item| %>
  <h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h2>
  <h4><%= portfolio_item.subtitle %></h4>
  <p><%= portfolio_item.body %></p>
  <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%></p>
  <% if logged_in?(:site_admin) %>
    <%= link_to 'Edit', edit_portfolio_path(portfolio_item) %>
    <%= link_to 'Delete Portfolio item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
